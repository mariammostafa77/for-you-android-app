<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/LogIn"
            android:textSize="30sp"
            android:layout_marginHorizontal="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/border"
            android:paddingLeft="10dp"
            android:hint="Email"
            android:layout_below="@+id/tvtxt"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/etUserName"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
        <CheckBox
            android:id="@+id/checkpass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPassword"
            android:text="Show password"
            android:layout_marginLeft="20dp"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btnSignInForm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="sign-in"
            android:layout_below="@+id/checkpass2"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_blue"
            android:enabled="false"/>

        <TextView
            android:id="@+id/tvtxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSignInForm"
            android:text="--------------------------- Create new account ----------------------"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"/>
        <Button
            android:id="@+id/btnRegester"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Create account"
            android:layout_below="@+id/tvtxt2"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_gray"/>



    </RelativeLayout>

</ScrollView>